#!/bin/bash
# =============================================================================
# SteamMachine-DIY - Gamescope Session Launcher (Hybrid Version)
# =============================================================================
# Script: steamos-session-launch
# Description: Orchestrates Gamescope with safe defaults and user overrides.
# Path: /usr/local/bin/steamos-session-launch
# =============================================================================

# --- 1. Safe Mode Defaults (1080p @ 60Hz) ---
TARGET_WIDTH=1920
TARGET_HEIGHT=1080
REFRESH_RATE=60
ENABLE_HDR=0
ENABLE_VRR=0
ENABLE_MANGOAPP=1

# --- 2. Load User Configuration ---
USER_CONFIG="$HOME/.config/steamos-diy/config"

if [ -f "$USER_CONFIG" ]; then
    # Carica le variabili dell'utente sovrascrivendo i Safe Defaults
    source "$USER_CONFIG"
    CONFIG_STATUS="CUSTOM (Loaded from $USER_CONFIG)"
else
    CONFIG_STATUS="SAFE MODE (Default 1080p@60Hz)"
fi

# --- 3. Environment & Logging ---
readonly LOG_FILE="/tmp/gamescope-session.log"
exec > "$LOG_FILE" 2>&1

# Toolkit & Session Identity
export XDG_SESSION_TYPE=wayland
export XDG_CURRENT_DESKTOP=gamescope
export GAMEMODE_AUTO=1

# SteamOS Specific overrides
export STEAM_USE_MANGOAPP=1
export STEAM_MULTIPLE_XWAYLANDS=1

# --- 4. Logic Functions ---

build_args() {
    # Base arguments
    ARGS=(
        --output-width "$TARGET_WIDTH"
        --output-height "$TARGET_HEIGHT"
        --refresh "$REFRESH_RATE"
        --always-epl      # Essential for Steam overlay focus
        --hide-cursor-delay 3000
    )

    # Performance & Visual Features
    [[ $ENABLE_HDR -eq 1 ]]      && ARGS+=(--hdr-enabled)
    [[ $ENABLE_VRR -eq 1 ]]      && ARGS+=(--adaptive-sync)
    [[ $ENABLE_MANGOAPP -eq 1 ]] && ARGS+=(--mangoapp)

    echo "${ARGS[@]}"
}

# --- 5. Execution ---

echo "[$(date '+%Y-%m-%d %H:%M:%S')] Starting Gamescope Session..."
echo "Status: $CONFIG_STATUS"
echo "Current Parameters: ${TARGET_WIDTH}x${TARGET_HEIGHT}@${REFRESH_RATE}Hz"

# Fetch constructed arguments
read -a FINAL_ARGS <<< "$(build_args)"

# Final launch command
# -e: Steam Deck interface integration
# -steamos3: Unlocks specific SteamOS menus
exec gamescope "${FINAL_ARGS[@]}" -e -- \
    steam -steamdeck -steamos -steamos3
