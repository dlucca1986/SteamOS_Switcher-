#!/bin/bash
# =============================================================================
# SteamMachine-DIY - Intelligent Universal Launcher
# =============================================================================
# Version: 2.4.0
# Description: Fail-safe launcher with Atomic Watchdog.
# Repository: https://github.com/dlucca1986/SteamMachine-DIY
# Path: /usr/local/bin/steamos-session-launch
# License: MIT
# =============================================================================

set -eou pipefail

# --- Configuration & Paths ---
readonly LOG_FILE="/tmp/steamos-diy.log"
readonly CONFIG_DIR="$HOME/.config/steamos-diy"
readonly CONFIG_FILE="$CONFIG_DIR/config"

# --- ANSI Color Codes ---
RED='\033[0;31m'
GREEN='\033[0;32m'
YELLOW='\033[1;33m'
CYAN='\033[0;36m'
BOLD='\033[1m'
NC='\033[0m'

# --- 0. Mode Detection & Log Initialization ---
SAFE_MODE=false
[[ "${1:-}" == "--safe-mode" ]] && SAFE_MODE=true

if [ "$SAFE_MODE" = false ]; then
    echo -e "${CYAN}[$(date '+%Y-%m-%d %H:%M:%S')] [SYSTEM] Starting new session. Logging initialized.${NC}" > "$LOG_FILE"
else
    {
        echo -e "${YELLOW}------------------------------------------------------------${NC}"
        echo -e "${YELLOW}[$(date '+%Y-%m-%d %H:%M:%S')] [RECOVERY] SAFE MODE ACTIVE: Environment Cleaned.${NC}"
        echo -e "${YELLOW}------------------------------------------------------------${NC}"
    } >> "$LOG_FILE"
fi

log_launch() {
    local LEVEL="$1"
    local MESSAGE="$2"
    local COLOR="$NC"

    case "$LEVEL" in
        "INFO")     COLOR="$CYAN" ;;
        "SUCCESS")  COLOR="$GREEN" ;;
        "WARN")     COLOR="$YELLOW" ;;
        "ERROR")    COLOR="$RED" ;;
        "RECOVERY") COLOR="$YELLOW" ;;
    esac

    local _msg="[$(date '+%Y-%m-%d %H:%M:%S')] [${LEVEL}] ${MESSAGE}"
    echo -e "${COLOR}${_msg}${NC}" >> "$LOG_FILE" 2>/dev/null || true
    logger -t SteamMachine-DIY "$_msg"
}

# --- 1. Hardware Auto-Detection ---
if [ "$SAFE_MODE" = false ]; then
    if [[ ! -f "$CONFIG_FILE" ]]; then
        log_launch "INFO" "Config file missing. Detecting hardware..."
        mkdir -p "$CONFIG_DIR"

        ACTIVE_PATH=$(grep -l "^connected" /sys/class/drm/card*-*/status | head -n1 || true)
        if [[ -n "$ACTIVE_PATH" ]]; then
            ACTIVE_DIR=$(dirname "$ACTIVE_PATH")
            _CONN_NAME=$(basename "$ACTIVE_DIR")
            _RES=$(head -n1 "$ACTIVE_DIR/modes" 2>/dev/null || echo "1280x720")
            _W=$(echo "$_RES" | cut -d'x' -f1)
            _H=$(echo "$_RES" | cut -d'x' -f2)
            log_launch "SUCCESS" "Detected: ${_CONN_NAME} (${_W}x${_H})"
        else
            log_launch "WARN" "No display detected. Using 720p defaults."
            _W=1280; _H=720
        fi

        cat <<EOF > "$CONFIG_FILE"
# STEAM MACHINE DIY - CONFIGURATION
TARGET_WIDTH=${_W:-1280}
TARGET_HEIGHT=${_H:-720}
REFRESH_RATE=60
ENABLE_MANGOAPP=0
ENABLE_HDR=0
CUSTOM_ARGS="--rt --disable-layers --disable-color-management"
EOF
    fi

    # --- 2. Load Config & Build Argument Array ---
    source "$CONFIG_FILE"
    G_ARGS=("-e")
    [[ -n "${TARGET_WIDTH:-}" ]]  && G_ARGS+=("-W" "$TARGET_WIDTH")
    [[ -n "${TARGET_HEIGHT:-}" ]] && G_ARGS+=("-H" "$TARGET_HEIGHT")
    [[ -n "${REFRESH_RATE:-}" ]]  && G_ARGS+=("-r" "$REFRESH_RATE")
    [[ "${ENABLE_MANGOAPP:-0}" == "1" ]] && export STEAM_USE_MANGOAPP=1
    [[ "${ENABLE_HDR:-0}" == "1" ]]      && G_ARGS+=("--hdr-enabled")

    if [[ -n "${CUSTOM_ARGS:-}" ]]; then
        read -r -a EXTRA_ARGS <<< "$CUSTOM_ARGS"
        G_ARGS+=("${EXTRA_ARGS[@]}")
    fi
else
    log_launch "WARN" "Skipping user config and exports for stability."
fi

# --- 3. Execution & Watchdog ---
if [ "$SAFE_MODE" = false ]; then
    log_launch "INFO" "Launching Primary: gamescope ${G_ARGS[*]}"
    echo "--- GAMESCOPE PRIMARY START ---" >> "$LOG_FILE"

    START_TIME=$(date +%s)

    # FIX: Aggiunto '|| true' per evitare che 'set -e' termini lo script in caso di crash di Gamescope.
    # Questo permette di calcolare DURATION e far scattare la Safe Mode.
    gamescope "${G_ARGS[@]}" -- steam -steamdeck -steamos3 >> "$LOG_FILE" 2>&1 || true

    DURATION=$(( $(date +%s) - START_TIME ))

    # Watchdog: Se la sessione dura meno di 3 secondi, attiva il recupero
    if [ "$DURATION" -lt 3 ]; then
        log_launch "ERROR" "Primary failed after ${DURATION}s."
        log_launch "RECOVERY" "Triggering atomic relaunch in --safe-mode..."
        sleep 1
        exec "$0" --safe-mode
    else
        log_launch "SUCCESS" "Session closed normally (${DURATION}s)."
    fi
else
    log_launch "WARN" "Launching Emergency Session (No Customs)..."
    echo "--- GAMESCOPE SAFE-MODE START ---" >> "$LOG_FILE"
    exec gamescope -e -- steam -steamdeck -steamos3 -autoconfig >> "$LOG_FILE" 2>&1
fi
